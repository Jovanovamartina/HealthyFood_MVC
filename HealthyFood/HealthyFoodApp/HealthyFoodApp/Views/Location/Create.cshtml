@using ViewModels
@model LocationViewModel
<h1>Add a new location</h1>
<form asp-action="Create" asp-controller="Location" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" type="text" class="form-control" value="">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address"></label>
        <input asp-for="@Model.Address" type="text" class="form-control" value="" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.OpensAt">Opens at : </label>
        <input asp-for="@Model.OpensAt" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.OpensAt">Closes at : </label>
        <input asp-for="@Model.ClosesAt" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary form-group mt-3">Save</button>
</form>
