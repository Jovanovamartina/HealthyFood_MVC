@using ViewModels
@model LocationViewModel
<h1>Edit location</h1>
<form asp-action="Edit" asp-controller="Location" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" type="text" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="OpensAt">Opens at : </label>
        <input asp-for="OpensAt" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OpensAt">Closes at : </label>
        <input asp-for="ClosesAt" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary form-group mt-3">Save</button>
</form>
