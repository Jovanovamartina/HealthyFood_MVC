@using System.Globalization;
@using ViewModels
@model List<HealthyFoodViewModel>


    <a class="btn btn-success mb-4 w-25 mx-" asp-area="" asp-controller="HealthyFood" asp-action="Create">Create</a>
<div class="row d-flex justify-content-evenly g-4 ">
    @{
        foreach (var food in Model)
        {
            <div class="card col-3 mx-3 px-0">
                <img class="card-img-top img-fluid" src="@food.ImageUrl" alt="@food.Name" style="height:200px; width:100%;">
                <div class="card-body">
                    <h5 class="card-title" style="color:green">@food.Name</h5>
                    <p class="card-text">@food.Ingredients</p>
                   
                    <p class="card-text">@food.Price.ToString("C" , CultureInfo.CreateSpecificCulture("mk-MK"))</p>
                    <div class="d-flex align-center justify-content-around">
                        <a asp-action="Details" asp-controller="HealthyFood" asp-route-id="@food.Id" class="btn btn-primary">Read more</a>
                        <a asp-action="Edit" asp-controller="HealthyFood" asp-route-id="@food.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="HealthyFood" asp-route-id="@food.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
