@using ViewModels
@model HealthyFoodViewModel

<h1>Create new burger</h1>
<form asp-action="Create" asp-controller="HealthyFood" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" type="text" class="form-control" value="">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Ingredients"></label>
        <input asp-for="@Model.Ingredients" type="text" class="form-control" value="" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ImageUrl"></label>
        <input asp-for="@Model.ImageUrl" type="text" class="form-control" value="" />
    </div>
    
    <div class="form-group">
        <label asp-for="@Model.Price"></label>
        <input asp-for="@Model.Price" type="number" step="any" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary form-group mt-3">Save</button>
</form>