@model OrderViewModel
@using System.Globalization;
@using ViewModels

<h1>Edit your Order</h1>

<form asp-action="Edit" asp-controller="Order" method="post">
    <input type="hidden" asp-for="Id" />
    <a asp-action="Create" asp-controller="HealthyFoodOrderItem" asp-route-id="@Model.Id">Add new </a>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address " class="form-control" />
    </div>

    <h2>Items in cart</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var food in Model.HealthyFood)
                {
                    <tr>
                        <td>@food.HealthyFood.Name</td>
                        <td>@food.Quantity</td>
                        <td>@food.Price</td>
                        <td>
                            <a asp-controller="HealthyFoodOrderItem" asp-action="Edit" asp-route-id="@food.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="HealthyFoodOrderItem" asp-action="Delete" asp-route-id="@food.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
               
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save changes</button>
</form>
